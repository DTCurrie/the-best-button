{
  "name": "the-best-button-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "build": "npm run lint && tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-server\"",
    "watch-ts": "tsc -w",
    "watch-server": "nodemon dist/server.js",
    "lint": "tslint -c ../tslint.json -p tsconfig.json",
    "serve": "tsc && node dist/server.js"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "mongodb": "^3.1.13",
    "morgan": "~1.9.0",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^4.1.1",
    "@types/express": "^4.16.1",
    "@types/mongodb": "^3.1.19",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.9.4",
    "@types/socket.io": "^2.1.2",
    "concurrently": "^4.1.0",
    "eslint": "^5.14.1",
    "nodemon": "^1.18.10",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  }
}
